<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".LessonLinks"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#EFCD5E">


    <TextView
        android:id="@+id/lesson"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="20sp"
        android:text="@string/lessons"
        android:textSize="30sp" />

    <Button
        android:id="@+id/lesson_btn1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15sp"
        android:backgroundTint="#E8E1A9"
        android:padding="15sp"
        android:text="@string/lesson1"
        android:textColor="#616161"
        />

    <Button
        android:id="@+id/lesson_btn2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15sp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#E8E1A9"
        android:padding="15sp"
        android:text="@string/lesson2"
        android:textColor="#616161"/>
<!--    android:onClick="onClickGoMain2"-->

    <Button
        android:id="@+id/lesson_btn3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15sp"
        android:backgroundTint="#E8E1A9"
        android:padding="15sp"
        android:text="@string/lesson3"
        android:textColor="#616161"/>
<!--    android:onClick="onClickGoMain3"-->

    <Button
        android:id="@+id/lesson_btn4"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15sp"
        android:backgroundTint="#E8E1A9"
        android:padding="15sp"
        android:text="@string/lesson4"
        android:textColor="#616161" />
<!--    android:onClick="onClickGoMain4"-->

    <Button
        android:id="@+id/lesson_btn5"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15sp"
        android:backgroundTint="#E8E1A9"
        android:padding="15sp"
        android:text="@string/lesson5"
        android:textColor="#616161" />
<!--    android:onClick="onClickGoMain5"-->

    <Button
        android:id="@+id/next_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#E8E1A9"
        android:text="@string/about_developer"
        android:textColor="#616161"/>
<!--        android:onClick="onClickGoMain6"-->
    
</LinearLayout>
</ScrollView>



